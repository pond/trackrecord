/************************************************************************\
 * File:    trackrecord_all.css                                         *
 *          Hipposoft 2008                                              *
 *                                                                      *
 * Purpose: Default TrackRecord stylesheet. Works in conjunction with   *
 *          the standard scaffold styles. All media types.              *
 *                                                                      *
 * History: 24-May-2008 (ADH): Standard comment header added.           *
 *          02-Nov-2009 (ADH): Version 1.5 extensions added.            *
\************************************************************************/

/* Overall page */

html,
body {
  margin: 0;
  padding: 0;
  height: 100%;
}

body {
  font-family: "Lucida Grande", "Helvetica Neue", sans-serif;
  font-size: 11pt;
}

#container {
  min-height: 100%;
  position: relative;
}

/* Global "utility" classes */

.nowrap {
  white-space: nowrap;
}

.left {
  text-align: left;
}

.centred {
  text-align: center;
}

.right {
  text-align: right;
}

tr.top {
  vertical-align: top;
}

.wide {
  width: 100%;
}

.narrow {
  white-space: nowrap;
  width: 1px;
}

/* Heading font (and navigation bar feature area), with floated links */

h1, h2, h3, h4, h5, h6,
div#header * {
  font-family: "Trebuchet MS", sans-serif;
  font-weight: bold;
}

h1 div.floated_link,
h2 div.floated_link,
h3 div.floated_link,
h4 div.floated_link,
h5 div.floated_link,
h6 div.floated_link {
  float: right;
  font-size: 11pt;
  font-weight: normal;
  line-height: 170%;
}

/* Header with navigation bar */

div#header {
  padding: 10px 2%;
  height: 72px;
  margin-bottom: 40px;

  background: rgb(96,108,136); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(96,108,136,1) 0%, rgba(63,76,107,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(96,108,136,1)), color-stop(100%,rgba(63,76,107,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* W3C */
  
  -webkit-box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.3);
  -moz-box-shadow:    0px 5px 5px rgba(0, 0, 0, 0.3);
  box-shadow:         0px 5px 5px rgba(0, 0, 0, 0.3);
}

div#title {
  float: left;
  color: #fff;
  padding: 13px 0 0 0;
}

span.slug {
  display: block;
  margin-top: 8px;
  font-size: 100%;
  font-weight: bold;
  color: #fff;
}

span.slug a {
  color: #ccc;
  text-decoration: none;
}

div#header span.version {
  color: #aaa;
}

div#header h1, div#navbar a {
  margin: 0;
}

div#header h1 {
  font-size: 18pt;
}

div#navbar {
  float: right;
}

div#navbar ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

div#navbar li {
  display: block;
  float: left;
  margin-left: 5px;
}

div#navbar a {
  display: block;
  float: left;
  text-decoration: none;
  text-align: center;
  color: #ccc;

  font-size: 16pt;

  width: 130px;
  height: 70px;
  line-height: 70px;
}

div#navbar a:hover {
  color: #fff;
  background: rgba( 255, 255, 255, 0.25 );
}

div#navbar li.current {
  background: #1d6721; /* Old browsers */
  background: -moz-linear-gradient(top, #1d6721 0%, #81ff81 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1d6721), color-stop(100%,#81ff81)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #1d6721 0%,#81ff81 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #1d6721 0%,#81ff81 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #1d6721 0%,#81ff81 100%); /* IE10+ */
  background: linear-gradient(to bottom, #1d6721 0%,#81ff81 100%); /* W3C */

  -webkit-box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.3);
  -moz-box-shadow:    0px 5px 5px rgba(0, 0, 0, 0.3);
  box-shadow:         0px 5px 5px rgba(0, 0, 0, 0.3);
}

div#navbar li.current a {
  color: #fff;
  height: 92px;
}

/* Float management */

.float_clear {
  clear: both;
}

/* Main content */

div#main_page_content {
  padding: 0 3em;
  padding-bottom: 84px; /* Footer height plus padding, see below */
  font-size: 10.5pt;
}

div#main_page_content h1,
div#main_page_content h2,
div#main_page_content h3,
div#main_page_content h4,
div#main_page_content h5,
div#main_page_content h6 {

  /* Prevents breakage caused by a scaffold.css 130% line height
   * rule on various elements that cascades into headings from
   * containing lines and causes them to actually be below 100%,
   * so if they wrap, the lines overlap vertically. The scaffold
   * rule is needed elsewhere, so just override this one case.
   */

  line-height: normal;
}


input[ type="checkbox" ],
input[ type="radio" ] {
  margin-right: 5px;
}

/* Footer */

div#footer {
  position: absolute;
  bottom: 0;

  width: 100%;
  height: 24px;
  padding: 20px 0;

  background: rgb(96,108,136); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(96,108,136,1) 0%, rgba(63,76,107,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(96,108,136,1)), color-stop(100%,rgba(63,76,107,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* W3C */
    
  -webkit-box-shadow: 0px -5px 5px rgba(0, 0, 0, 0.3);
  -moz-box-shadow:    0px -5px 5px rgba(0, 0, 0, 0.3);
  box-shadow:         0px -5px 5px rgba(0, 0, 0, 0.3);

  color: #aaa;
}

div#footer a {
  color: #fff;
  text-decoration: none;
}

div#footer div:first-child {
  float: left;
  padding-left: 3em;
}

div#footer div:last-child {
  float: right;
  padding-right: 3em;
}

/* Flash messages */

div.messages {
  font-size: 125%;
  font-weight: bold;
}

div.messages div {
  margin-top: 12px;
  padding: 10px;

  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
}

div.messages div.flash_error {
  color: #800;
  border: 1px solid #800;
  background: #fee;
}

div.messages div.flash_warning {
  color: #840;
  border: 1px solid #840;
  background: #fff8ee;
}

div.messages div.flash_notice {
  color: #080;
  border: 1px solid #080;
  background: #efe;
}

div.messages + h1,
div.messages + div.signin {
  margin-top: 36px;
}

/* Home page sections */

div#home_general,
div#home_management,
div#home_admin {
  float: left;
  width: 32%;
}

div#home_general,
div#home_management {
  padding-right: 2%;
}

/* Buttons leading to auto-generated reports */

div.report_button {
  display: inline-block;
  padding: 0;
  margin: 0;
}

div.report_button input {
  margin: 0;
}

/* Layout hackery tables */

table.for_layout {
  border: none;
  border-spacing: 0;
  border-collapse: collapse;   
}

table.for_layout tr {
  vertical-align: top;
  text-align: left;
}

table.for_layout tr td {
  margin: 0;
  padding: 0;
}

/* Sign-in table, with some related modifications for user account editing */

div.signin {
  text-align: center;
}

div.signin div.errorExplanation {
  text-align: left;
}

div.signin p {
  padding: 10px 0;
}

div.signin table {
  margin: 30px auto;
  border: 1px solid black;
  padding: 15px;
  background: #f8f8f8;

  text-align: left;

  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
}

div.signin table form {
  margin: 0;
  padding: 0;
}

div.signin th img {
  padding-right: 10px;
}

div.signin table input {
  font-size: 100%;
  display: inline;
  padding-right: 22px;
}

div.signin table input#sign_in_identity_url {
  background: white url( <%= asset_path( "trackrecord/openid_small_logo.png" ) %> ) 2px 50% no-repeat; 
  padding-left: 22px;
  padding-right: 0;
}

div.signin table input[ type ~= 'submit' ] {
  font-size: 14pt;
  padding-right: 0;
}

div.signin table td#or {
  text-align: center;
  padding: 10px 0;
}

div.signin table td#submit {
  text-align: center;
  padding: 15px 0 0 0;
}

/* List views */

table.list,
table.navigation {
  border: none;
  width: 100%;
  border-collapse: collapse;
}

div.list_titles {
}

div.list_create {
  float: right;
}

div.list_titles h1,
div.list_create h1 {
}

table.list, p.list_empty {
  clear: both;
}

table.list         td,
table.list tr.info th {
  padding: 5px 10px;
  font-size: 90%;
}

table.list td.list_actions {
  padding-left: 10px;
  padding-right: 10px;
  text-align: right;
  white-space: nowrap;
}

table.list tr.odd td.list_actions {
  background: #fee;
}

table.list tr.even td.list_actions {
  background: #fdd;
}

table.list td.list_actions a {
  color: black;
}

table.list td.list_actions a:hover {
  color: white;
}

table.list form {
  margin: 0;
  padding: 0;
}

table.list th.sorted_column_asc {
  background: #a90329; /* Old browsers */
  background: -moz-linear-gradient(top, #a90329 0%, #8f0222 44%, #6d0019 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#a90329), color-stop(44%,#8f0222), color-stop(100%,#6d0019)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #a90329 0%,#8f0222 44%,#6d0019 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #a90329 0%,#8f0222 44%,#6d0019 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #a90329 0%,#8f0222 44%,#6d0019 100%); /* IE10+ */
  background: linear-gradient(to bottom, #a90329 0%,#8f0222 44%,#6d0019 100%); /* W3C */
}

table.list th.sorted_column_desc {
  background: #03a929; /* Old browsers */
  background: -moz-linear-gradient(top, #03a929 0%, #028f22 44%, #006d19 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#03a929), color-stop(44%,#028f22), color-stop(100%,#006d19)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #03a929 0%,#028f22 44%,#006d19 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #03a929 0%,#028f22 44%,#006d19 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #03a929 0%,#028f22 44%,#006d19 100%); /* IE10+ */
  background: linear-gradient(to bottom, #03a929 0%,#028f22 44%,#006d19 100%); /* W3C */
}

table.list th.sorted_column_asc a:before {
  content: url( <%= asset_path( "trackrecord/up.png" ) %> );
}

table.list th.sorted_column_desc a:before {
  content: url( <%= asset_path( "trackrecord/down.png" ) %> );
}

/* Navigation links within list tables (overriding some styles above) */

tr.navigation,
tr.navigation table,
tr.navigation tr,
tr.navigation td {
  padding: 0;
  margin: 0;
  border-collapse: collapse;
}

tr.navigation table {
  width: 100%;
}

tr.navigation td {
  padding-bottom: 2px;
}

td.navigation_per_page {
  width: 40%;
}

td.navigation_page_info {
  width: 20%;
  text-align: center;
}

td.navigation_page_selection {
  width: 40%;
  text-align: right;
  white-space: nowrap;
}

/* In-place editors */

form.inplaceeditor-form {
  position: absolute;
  background: white;
  border: 2px solid #888;
  text-align: center;
}

form.inplaceeditor-form input[ type="text" ] {
  margin: 5px;
  width: 90%;
}

form.inplaceeditor-form input[ type="submit" ] {
  margin: 5px;
  float: left;
}

form.inplaceeditor-form a {
  margin: 5px;
  float: right;
}

form.inplaceeditor-form select {
  margin: 5px;
  float: left;
}

/* Rows in general tables */

tr.info {
  background: rgb(96,108,136); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(96,108,136,1) 0%, rgba(63,76,107,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(96,108,136,1)), color-stop(100%,rgba(63,76,107,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* W3C */

  color: #fff;
  white-space: nowrap;
  vertical-align: middle;
  text-align: left;
}

tr.info th,
tr.info td {
  padding: 4px 1px;
}

tr.info th {
  font-weight: normal;
}

tr.info th a {
  color: white;
}

th.spacer, td.spacer {
  width: 1px;
}

tr.even, tr.odd {
  vertical-align: top;
  text-align: left;
}

tr.odd {
  background: #eee;
}

tr.even {
  background: #ddd;
}

tr.odd .total {
  background: #cec;
}

tr.even .total {
  background: #bdb;
}

tr.odd .overall_total {
  background: #040;
  color: #0f0;
}

tr.even .overall_total {
  background: #030;
  color: #0e0;
}

/* Edit-item and show-item presentation tables */

table.editing_table,
table.display_table {
  border: none;
}

table.editing_table.indented,
table.display_table.indented {
  margin-left: 2em;
}

tr.editing_row,
tr.display_row {
  vertical-align: top;
  text-align: left;
}

.display_actions,
.editing_actions {
  text-align: center;
}

/* Search form tables */

td.search_prompt {
  text-align: right;
}

/* Audit changes table */

table.audit_changes {
  color: #000;
  border: 1px solid #aaa;
  padding: 0;
  margin: 2px 0;
  border-collapse: collapse;
}

table.audit_changes tr {
  border: none;
  padding: 0;
}

table.audit_changes td,
table.audit_changes th {
  border-left: 1px solid #aaa;
  color: #000;
  text-align: left;
  padding: 1px 4px;
}

table.audit_changes th {
  background: #aaa;
}

.audit_changes_field {
  width: 20%;
}

.audit_changes_from {
  width: 20%;
}

.audit_changes_to {
  width: 60%
}

/* Timesheet year overview chart - see timesheethelp_year_chart */

table.timesheet_chart_container {
  border: none;
  margin: 0 auto;
}

table.timesheet_chart {
  border: none;
  border-collapse: collapse;
  margin-bottom: 5px;
}

table.timesheet_chart tr td {
  border-left: 1px solid #444;
  padding: 4px 8px;
  vertical-align: middle;
}

table.timesheet_chart tr td:first-child {
  border-left: none;
}

table.timesheet_chart tr.last {
}

table.timesheet_chart th {
  background: rgb(96,108,136); /* Old browsers */
  background: -moz-linear-gradient(top, rgba(96,108,136,1) 0%, rgba(63,76,107,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(96,108,136,1)), color-stop(100%,rgba(63,76,107,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom, rgba(96,108,136,1) 0%,rgba(63,76,107,1) 100%); /* W3C */

  font-weight: normal;
  color: #fff;
  padding: 4px;
}

table.timesheet_chart td.committed {
  background: #7c7;
}

table.timesheet_chart td.not_committed {
  background: #fa7;
}

table.timesheet_chart td.timesheet_chart_month {
  font-weight: bold;
  padding-right: 20px;
}

table.timesheet_chart a {
  text-decoration: none;
}

table.timesheet_chart a:visited {
  color: black;
}

table.timesheet_chart a:hover {
  color: white;
}

table.timesheet_chart form, table.timesheet_chart div {
  margin: 0;
  padding: 0;
}

/* Reports (see also timesheet editor/display styles later) */

table.report {
  white-space: nowrap;
}

table.report_edit_wrapper {
  border: none;
  border-collapse: collapse;
  width: 100%;
  padding: 0;
  margin: 0;
}

table.report_edit_wrapper > tbody > tr {
  vertical-align: top;
  padding: 0;
  margin: 0;
}

table.report_edit_wrapper > tbody > tr > td {
  width: 50%;
  padding: 0;
  margin: 0;
}

table.report_edit_wrapper > tbody > tr > td.odd {
  background: #f8f8f8;
}

table.report_edit_wrapper > tbody > tr > td.even {
  background: #f0f0f0;
}

div.report_edit_section {
  padding: 1px 15px; /* 1px to work around accidental/buggy collapse on WebKit with 0 of *all* padding at top/bottom edges, including elements that have their own padding set, such as headings */
  margin: 0;
  height: 100%;
}

div.report_edit_section textarea,
div.report_edit_section select[ multiple~=multiple ] {
  width: 100%;
}

h2.report_subtitle {
  margin-top: 2.5em;
}

table.display_table.report_actions {
  border: none;
  margin: none;
  border-collapse: collapse;
}

table.display_table.report_actions td {
  padding: 5px;
  vertical-align: baseline;
}

table.report tr.info th {
  padding-left: 0.25em;
  padding-right: 0.25em;
}

/* Timesheet editor and display grids; reports also use some of
 * these styles.
 */

table.ts_edit_table,
table.ts_show_table {
  width: 100%;
  border: none;
  border-collapse: collapse;
}

table.ts_edit_table tr,
table.ts_show_table tr {
  vertical-align: middle;
}

table.ts_edit_table th,
table.ts_show_table th {
  text-align: center;
}

table.ts_edit_table td,
table.ts_show_table td {
  padding: 0;
}

table.ts_edit_table td.ts_edit_task {
  padding: 0 2px;
}

table.ts_edit_table td.ts_edit_task table,
table.ts_edit_table td.ts_edit_task tr,
table.ts_edit_table td.ts_edit_task td {
  margin: 0;
}

table.ts_show_table td.ts_show_task {
  padding: 2px 2px 2px 6px;
}

td.ts_task_user_detail {
  font-size: 85%;
  color: #888;
}

tr.odd td.ts_task_user_detail {
  border-top: 1px solid #d4d4d4;
}

tr.even td.ts_task_user_detail {
  border-top: 1px solid #c3c3c3;
}

td.ts_work_user_detail,
th.ts_total_user_detail {
  font-size: 85%;
  opacity: 0.5;
}

table.ts_edit_table td a,
table.ts_show_table td a {
  color: inherit;
  text-decoration: none;
}

table.ts_edit_table td a:hover,
table.ts_show_table td a:hover {
  color: #fff;
}

td.ts_edit_work {
  border: 1px solid #888;
  background: white;
  text-align: center;
}

td.ts_show_work {
  border: 1px solid #aaa;
  background: #f5f5f5;
  color: #444;
  text-align: center;
}

td.ts_edit_work input {
  border: none;
  width: 90%;
  text-align: center;
}

table.ts_edit_table th.ts_edit_heading,
table.ts_show_table th.ts_show_heading {
  padding: 4px 2px 4px 6px;
  font-size: 100%;
  text-align: left;
  background: #c8c8c8;
}

table.report th.ts_show_heading.ts_show_work {
  text-align: center;
}

table.ts_edit_table .total,
table.ts_show_table .total,
table.ts_edit_table .overall_total,
table.ts_show_table .overall_total {
  text-align: center;
  padding: 2px;
}

table.ts_edit_table .total:first-child,
table.ts_show_table .total:first-child {
  text-align: right;
  padding-right: 10px;
}

table.ts_edit_table tr.group_gap td,
table.ts_show_table tr.group_gap td,
table.ts_edit_table tr.group_gap th,
table.ts_show_table tr.group_gap th {
  padding: 0;
  margin: 0;
  height: 3px;
  background: #fff;
}

/* Bulk task import table */

table.bulk_task_import {
  margin: 0 auto;
  width: 80%;
  white-space: nowrap;
  border-collapse: collapse;
}

table.bulk_task_import tr {
  vertical-align: baseline;
}

table.bulk_task_import tr td {
  padding-left: 5px;
}

table.bulk_task_import td.task_title {
  width: 100%;
}

table.bulk_task_import input.task_title {
  width: 95%;
}

table.bulk_task_import tr.breadcrumb {
  background-color: #ccc;
  color: black;
  font-size: 90%;
}

table.bulk_task_import tr.breadcrumb td {
  padding: 5px 7px;
  border-top: 7px solid white;
}

table.bulk_task_import tr td table.bulk_task_import {
  margin: 0;
  width: auto;
}

table.bulk_task_import tr td table.bulk_task_import tr td {
  padding-left: 0;
}

/* Committed / not committed timesheet labels; active / not active
 * items; overrunning / not overrunning labels.
 */

span.timesheet_not_committed {
  color: #a50;
}

span.timesheet_committed, span.item_active, span.no_overrun {
  color: #080;
}

span.item_inactive, span.overrun, span.dup {
  color: #800;
}

span.overrun {
  font-weight: bold;
}

/* Table cells carrying totals with italic or bold content are
 * indicating a problem with the total (see timesheet_editor.js).
 */

td.total b, td.total i {
  color: #800;
}

/* Task indicators - billable / not billable, active / inactive */

.task_billable {
}

.task_not_billable {
  color: #59f;
}

.task_active {
}

.task_inactive {
  text-decoration: line-through;
}

/* Definition lists */

dt {
  font-weight: bold;
  padding: 1em 0;
}

/* General "floating icon" based pages and variants */

div.icon_page {
  background: top left no-repeat;
  padding-left: 106px;
  min-height: 116px;
}

div.icon_page.help {
  background-image: url( <%= asset_path( "trackrecord/info.png" ) %> );
}

div.icon_page.warning {
  background-image: url( <%= asset_path( "trackrecord/warning.png" ) %> );
  padding-left: 116px;
}

/* "Help" icons */

img.help {
  position: relative;
  vertical-align: top;
  padding: 2px 1px 1px 1px;
  top: 0px;

  background: url( <%= asset_path( "trackrecord/help_sprite.png" ) %> ) 1px 2px no-repeat;
}

a:hover img.help {
  background-position: 1px -30px;
}

/* "Warning" icons on deletion pages */

img.warning {
  float: left;
  padding-right: 15px;
}

/* General YUI tree view settings */

div.yui-tree-container {
  border: 1px solid #ccc;
  padding: 0 5px 3px 5px;
}

textarea.tree_selector_text {
  margin: 0;
  padding: 2px;
}

/* Fix some odd styles in the default YUI TreeView CSS */

.ygtv-checkbox .ygtv-highlight0 .ygtvcontent,
.ygtv-checkbox .ygtv-highlight1 .ygtvcontent,
.ygtv-checkbox .ygtv-highlight2 .ygtvcontent {
  padding-left: 17px; /* Check box image is 16px wide with some built-in padding and text labels rarely precisely abut their left edge due to the shapes of characters and anti-aliasing; default '1em' leaves check box too close to text for my liking */
}

a.ygtvspacer:hover {
  background: none; /* Override default a:hover rule in scaffold.css */
}

/* Leightbox links */

a.lbOn {
  font-size: 90%;
}

/* Narrow viewport adjustments */

@media all and (max-width: 800px) {

  /* Header - stack vertically */

  div#header {
    text-align: center;
  }

  div#title {
    float: none;
    padding-top: 0;
  }

  div#title h1 {
    font-size: 120%;
    line-height: 100%;
  }
  
  span.slug {
    font-size: 12px;
  }

  div#navbar {
    float: none;
    border-top: 1px solid rgb(106,118,146);
    margin: 5px 0 0 0;
    padding: 5px 0 0 0;
    width: 100%;
  }

  div#navbar li {
    margin: 0 auto;
    padding: 0;
    width: 23%;
    margin: 0 1%;
  }

  div#navbar a {
    float: none;
    width: 100%;
    height: auto;
    font-size: 14px;
    line-height: 160%;
  }

  div#navbar li.current a {
    padding-top: 5px;
    height: 28px;
  }

  /* Footer - stack vertically */

  div#footer {
    text-align: center;
    padding: 10px 0 30px;
  }

  div#footer div:first-child {
    float: none;
    padding: 0;
  }

  div#footer div:last-child {
    float: none;
    padding: 0;
  }

  /* Control panel - stack vertically */

  div#home_general,
  div#home_management,
  div#home_admin {
    float: none;
    width: auto;
    padding: 0;
  }
}

